screen 0 {
  styles {
    normal {
      font = "profont 8"
      fg = "#efefcf"
      bg = "#101010"
      border = "#282c28"
    }

    focus {
      fg = "#efefcf"
      bg = "#282c28"
      border = "#282c28"
    }

    urgent {
      fg = "#111111"
      bg = "#ff4500"
    }
  }

  titlebar {
    position = "bottom"
    text_align = "left"
  }

  general {
    resize_hints = false
  }

  tags {
    tag chat {
      layout = "dwindle"
    }

    tag web {
      layout = "dwindle"
    }

    tag dev {
      layout = "dwindle"
    }

    tag media {
      layout = "dwindle"
    }

    tag misc {
      layout = "dwindle"
    }
  }

  layouts {
    layout tile {
      image = "/usr/share/awesome/icons/layouts/tilew.png"
    }

    layout tileleft {
      image = "/usr/share/awesome/icons/layouts/tileleftw.png"
    }

    layout max {
      image = "/usr/share/awesome/icons/layouts/maxw.png"
    }

    layout spiral {
      image = "/usr/share/awesome/icons/layouts/spiralw.png"
    }

    layout dwindle {
      image = "/usr/share/awesome/icons/layouts/dwindlew.png"
    }

    layout floating {
      image = "/usr/share/awesome/icons/layouts/floatingw.png"
    }
  }

  statusbar top {
    position = "top"

    taglist mytaglist {
      mouse {
        button = "1"
        command = "tag_view"
      }

      mouse {
        button = "1"
        modkey = {"Mod4"}
        command = "client_tag"
      }

      mouse {
        button = "3"
        command = "tag_toggleview"
      }

      mouse {
        button = "3"
        modkey = {"Mod4"}
        command = "client_toggletag"
      }

      mouse {
        button = "4"
        command = "tag_viewnext"
      }

      mouse {
        button = "5"
        command = "tag_viewprev"
      }
    }

    emptybox left_to_cpu_usage_icon {
      width = 10
    }

    iconbox cpu_usage_icon {
      image =  ".awesome/cpu.xbm.png"
      resize = false
      y = 4
    }

    emptybox left_to_cpu_usage {
      width = 3
    }

    graph cpu_usage {
      data average {
        fg = "#c5f779"
        fg_center = "#c5f779"
        fg_end = "#ff0000"
        vertical_gradient = true
      }

      bg = "#101010"
      bordercolor = "#282c28"
      width = 25
      height = 0.5
    }

    emptybox left_to_net_traffic_icon {
      width = 10
    }

    iconbox net_traffic_icon {
      image =  ".awesome/net_down_03.xbm.png"
      resize = false
      y = 4
    }

    emptybox left_to_net_traffic {
      width = 3
    }

    graph net_traffic {
      data one {
        fg = "#c5f779"
        fg_center = "#c5f779"
        fg_end = "#ff0000"
        vertical_gradient = true
      }

      bg = "#101010"
      bordercolor = "#282c28"
      width = 25
      height = 0.5

      mouse {
        button = "1"
        command = "spawn"
        arg = "exec urxvt -e screen -r p2p"
      }
    }

    emptybox left_to_alsa_icon {
      width = 10
    }

    iconbox alsa_icon {
      image =  ".awesome/spkr_01.xbm.png"
      resize = false
      y = 4
    }

    emptybox left_to_alsa {
      width = 3
    }

    progressbar alsa {
      data master {
        fg = "#c5f779"
        fg_center = "#c5f779"
        fg_end = "#ff0000"
        bg = "#101010"
        bordercolor = "#282c28"
      }

      vertical = true
      ticks_count = 5
      width = 6
    }

    emptybox left_to_mpd_icon {
      width = 10
    }

    iconbox mpd_icon {
      image =  ".awesome/note.xbm.png"
      resize = false
      y = 4
    }

    emptybox left_to_mpd {
      width = 3
    }

    textbox mpd {
      mouse {
        button = "1"
        command = "spawn"
        arg = "exec urxvt -e ncmpc"
      }
    }

    textbox moc {
      mouse {
        button = "1"
        command = "spawn"
        arg = "exec urxvt -e mocp"
      }
    }

    iconbox personal_status_icon {
      align = "right"
      image =  ".awesome/clock.xbm.png"
      resize = false
      y = 4
    }

    emptybox left_to_personal_status {
      width = 3
      align = "right"
    }

    textbox personal_status {
      align = "right"
    }

    emptybox left_to_pacman_icon {
      width = 10
      align = "right"
    }

    iconbox pacman_icon {
      align = "right"
      image =  ".awesome/pacman.xbm.png"
      resize = false
      y = 4

      mouse {
        button = "1"
        command = "spawn"
        arg = "exec urxvt -e sh -c 'sudo pacman -Su; amazing -u pacman/top/0'"
      }
    }

    emptybox left_to_pacman {
      width = 3
      align = "right"
    }

    textbox pacman {
      align = "right"

      mouse {
        button = "1"
        command = "spawn"
        arg = "exec urxvt -e sh -c 'sudo pacman -Su; amazing -u pacman/top/0'"
      }
    }

    emptybox left_to_gmail_icon {
      width = 10
      align = "right"
    }

    iconbox gmail_icon {
      align = "right"
      image =  ".awesome/mail.xbm.png"
      resize = false
      y = 4

      mouse {
        button = "1"
        command = "spawn"
        arg = "exec firefox http://mail.google.com/mail"
      }
    }

    emptybox left_to_gmail {
      width = 3
      align = "right"
    }

    textbox gmail {
      align = "right"

      mouse {
        button = "1"
        command = "spawn"
        arg = "exec firefox http://mail.google.com/mail"
      }
    }

    emptybox left_to_clock {
      width = 30
      align = "right"
    }

    textbox clock {
      align = "right"
    }

    emptybox right_to_clock {
      width = 30
      align = "right"
    }

    layoutinfo mylayoutinfo {
      align = "right"

      mouse {
        button = "1"
        command = "tag_setlayout"
        arg = "+1"
      }

      mouse {
        button = "4"
        command = "tag_setlayout"
        arg = "+1"
      }

      mouse {
        button = "3"
        command = "tag_setlayout"
        arg = "-1"
      }

      mouse {
        button = "5"
        command = "tag_setlayout"
        arg = "-1"
      }
    }
  }
}

rules {
  rule {
    name = "Gimp"
    float = true
  }

  rule {
    name = "MPlayer"
    float = true
    tags = "chat|dev|media"
  }
}

mouse {
  root {
    button = "3"
    command = "spawn"
    arg = "exec urxvt"
  }

  root {
    button = "4"
    command = "tag_viewnext"
  }

  root {
    button = "5"
    command = "tag_viewprev"
  }

  client {
    modkey = {"Mod4"}
    button = "1"
    command = "client_movemouse"
  }

  client {
    modkey = {"Mod4"}
    button = "2"
    command = "client_zoom"
  }

  client {
    modkey = {"Mod4"}
    button = "3"
    command = "client_resizemouse"
  }
}

keys {
  key {
    modkey = {"Mod4"}
    key = "s"
    command = "spawn"
    arg = "slock"
  }

  key {
    modkey = {"Mod4"}
    key = "a"
    command = "spawn"
    arg = "exec sh -c \"$($HOME/bin/personal_status_menu.sh status; amazing -u personal_status/top/0)\""
  }

  key {
    modkey = {"Mod4"}
    key = "p"
    command = "spawn"
    arg = "dmenu_path | awesome-menu -e 'exec ' execute"
  }

  key {
    modkey = {"Mod4"}
    key = "Return"
    command = "spawn"
    arg = "exec urxvt"
  }

  key {
    modkey = {"Mod4"}
    key = "space"
    command = "tag_setlayout"
    arg = "+1"
  }

  key {
    modkey = {"Mod4", "Shift"}
    key = "space"
    command = "tag_setlayout"
    arg = "-1"
  }

  key {
    modkey = {"Mod4"}
    key = "b"
    command = "statusbar_toggle"
  }

  key {
    modkey = {"Mod4"}
    key = "j"
    command = "client_focusnext"
  }

  key {
    modkey = {"Mod4"}
    key = "k"
    command = "client_focusprev"
  }

  key {
    modkey = {"Mod4"}
    key = "Tab"
    command = "focus_history"
    arg = "-1"
  }

  key {
    modkey = {"Mod4", "Shift"}
    key = "j"
    command = "client_swapnext"
  }

  key {
    modkey = {"Mod4", "Shift"}
    key = "k"
    command = "client_swapprev"
  }

  key {
    modkey = {"Mod4", "Control"}
    key = "j"
    command = "client_moveresize"
    arg = "+0 +20 +0 +0"
  }

  key {
    modkey = {"Mod4", "Control"}
    key = "k"
    command = "client_moveresize"
    arg = "+0 -20 +0 +0"
  }

  key {
    modkey = {"Mod4"}
    key = "h"
    command = "tag_setmwfact"
    arg = "-0.05"
  }

  key {
    modkey = {"Mod4"}
    key = "l"
    command = "tag_setmwfact"
    arg = "+0.05"
  }

  key {
    modkey = {"Mod4", "Shift"}
    key = "h"
    command = "tag_setnmaster"
    arg = "+1"
  }

  key {
    modkey = {"Mod4", "Shift"}
    key = "l"
    command = "tag_setnmaster"
    arg = "-1"
  }

  key {
    modkey = {"Mod4", "Control"}
    key = "h"
    command = "client_moveresize"
    arg = "-20 +0 +0 +0"
  }

  key {
    modkey = {"Mod4", "Control"}
    key = "l"
    command = "client_moveresize"
    arg = "+20 +0 +0 +0"
  }

  key {
    modkey = {"Mod4"}
    key = "Escape"
    command = "tag_viewprev_selected"
  }

  key {
    modkey = {"Mod4"}
    key = "Left"
    command = "tag_viewprev"
  }

  key {
    modkey = {"Mod4"}
    key = "Right"
    command = "tag_viewnext"
  }

  key {
    modkey = {"Mod4"}
    key = "m"
    command = "client_togglemax"
  }

  key {
    modkey = {"Mod4", "Control"}
    key = "Return"
    command = "client_zoom"
  }

  key {
    modkey = {"Mod4", "Control"}
    key = "space"
    command = "client_togglefloating"
  }

  key {
    modkey = {"Mod4", "Shift"}
    key = "c"
    command = "client_kill"
  }

  key {
    modkey = {"Mod4", "Shift"}
    key = "q"
    command = "quit"
  }

  key {
    modkey = {"Mod4", "Control"}
    key = "r"
    command = "exec"
    arg = "awesome"
  }

  key {
    modkey = {"Mod4"}
    key = "0"
    command = "tag_view"
  }

  keylist {
    modkey = {"Mod4"}
    command = "tag_view"
    keylist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
    arglist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
  }

  key {
    modkey = {"Mod4", "Control"}
    key = "0"
    command = "tag_toggleview"
  }

  keylist {
    modkey = {"Mod4", "Control"}
    command = "tag_toggleview"
    keylist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
    arglist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
  }

  key {
    modkey = {"Mod4", "Shift"}
    key = "0"
    command = "client_tag"
  }

  keylist {
    modkey = {"Mod4", "Shift"}
    command = "client_tag"
    keylist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
    arglist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
  }

  key {
    modkey = {"Mod4", "Shift", "Control"}
    key = "0"
    command = "client_toggletag"
  }

  keylist {
    modkey = {"Mod4", "Shift", "Control"}
    command = "client_toggletag"
    keylist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
    arglist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
  }

  key {
    modkey = {"Mod4"}
    key = "F1"
    command = "spawn"
    arg = "setxkbmap dvorak"
  }

  key {
    modkey = {"Mod4"}
    key = "F2"
    command = "spawn"
    arg = "setxkbmap se"
  }
}

